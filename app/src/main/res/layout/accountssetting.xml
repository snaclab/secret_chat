	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent" >
          
          <!-- Body -->
  <TableLayout 
        android:id="@+id/tableAccounts"   	
        style="@style/smainTable">
        
        <TableRow android:id="@+id/tableaccounts_header"
            style="@style/srhizomeTableRow2">  
                    
            <TextView
                android:id="@+id/accountsscreen_header"
                style="@style/srhizome_header"
                android:text="@string/AccountsSettingsLabel"/>
        </TableRow>	

 <!-- Reset Phone Number -->         
        <TableRow 
            android:id="@+id/tableAccounts2"
            style="@style/srhizomeTableRow">
		
            <Button android:id="@+id/btnphoneReset"
                style="@style/sbtnrhizome"
                android:text="@string/PhoneResetLabel"/>  

        </TableRow>


      <TableRow
          android:id="@+id/tableAccounts4"
          style="@style/srhizomeTableRow"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <TextView
              android:id="@+id/AC_sid"
              style="@style/sactitle"
              android:text="@string/ac_sid" />

          <TextView
              android:id="@+id/acsid"
              style="@style/stextsettings" />
      </TableRow>
  </TableLayout>

</RelativeLayout>